
    /**
{% block phpdoc_method_header %}
     * Deletes a {{ entity_singularized }} entity.
{% endblock phpdoc_method_header %}
     *
{% block phpdoc_method_annotations %}
{% if 'annotation' == format %}
     * @Delete("/api/{{ entity_bundle|lower }}/{{route_prefix}}/{{ '{' ~ identifier ~ '}' }}/delete ")
{% endif %}
{% endblock phpdoc_method_annotations %}
     */
{% block method_definition %}
    public function deleteAction(Request $request, {{ entity_class }} ${{ entity_singularized }})
{% endblock method_definition %}
    {
{% block method_body %}
        $em = $this->getDoctrine()->getManager();
        $em->remove(${{ entity_singularized }});
        $em->flush();
{% endblock method_body %}

{% block method_return %}
        $view = $this->view(${{ entity_singularized }});
        return $this->handleView($view);  
{% endblock method_return %}
    }

